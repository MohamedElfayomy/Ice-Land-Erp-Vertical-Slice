{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
    // Remove 'rootDir': './src'
  },
  // Explicitly tell the compiler to look inside 'src'
  "include": ["src/**/*"] 
}